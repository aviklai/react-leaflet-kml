{
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "moduleDirectories": [
        "node_modules",
        "main/node_modules"
    ],
    "testEnvironment": "jsdom",
    "transformIgnorePatterns": ["/node_modules/(?!(@react-leaflet/core|react-leaflet))"],
    "globals": {
        "ts-jest": {
          "tsconfig": {
            "allowJs": true
          }
        }
      }
  }